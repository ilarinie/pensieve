{
  "name": "i-l-e-personal-assistant",
  "version": "0.1.0",
  "private": true,
  "description": "Pensieve - Personal Memory Assistant",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "tsx watch packages/server/src/index.ts",
    "build": "tsc -b",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "ESLINT_USE_FLAT_CONFIG=true eslint -c packages/server/eslint.config.mjs packages/server",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc -p packages/server/tsconfig.json --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx packages/server/src/db/migrate.ts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-unused-imports": "4.1.3",
    "globals": "15.9.0",
    "husky": "8.0.1",
    "lint-staged": "16.0.0",
    "prettier": "3.2.5",
    "tsx": "4.19.2",
    "typescript": "5.7.3",
    "typescript-eslint": "8.2.0",
    "vitest": "3.1.4"
  }
}
